{% extends "base.j2" %}

{% block parallax_image %}
  <div class="parallax-container">
    <div class="parallax"><img id="slide-image-1" src="http://2hs1ga4co2vozkshf4prujwp.wpengine.netdna-cdn.com/wp-content/uploads/2011/05/Blog-People-Think.jpg"></div>
	{% block loader %}
    	{{ super() }}
    {% endblock loader %}
  </div>
{% endblock parallax_image %}

{% from "macros.j2" import render_excerpt with context  %}
{% block main %}
	<!-- {% block page_title %}<h1 class="title">{{ resource.meta.title }}</h1>{% endblock %} -->

	<ul class="listing clear">
		{% set i=1 %}
		{% for res in resource.node.walk_resources_sorted_by_time() %}
			{% if i<10 %}
				<li>
				    {{ render_excerpt(res) }}
				</li>
			{% endif %}
		{% set i=i+1 %}
		{% endfor %}
	</ul>
{% endblock %}
